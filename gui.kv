#:import get_color_from_hex kivy.utils.get_color_from_hex

<FirstScreen@BoxLayout>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#D3D4D5')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: None, None
    height: 500
    width: 500
    pos_hint: {"center_x": .5, "center_y": .5}
    padding: ('10dp', '10dp', '10dp', '10dp')

    Label:
        text: "Nome do Album:"
        size_hint_x: .3
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: nomeAlbum
        multiline: False
    Label:
        text: "Ano do lancamento:"
        size_hint_x: .3
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: anoLancamento
        multiline: False
    Label:
        text: "Banda/Artista:"
        size_hint_x: .3                
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: bandaArtista
        multiline: False
    Label:
        text: "Album lancamento do artista:"
        size_hint_x: .3                
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: lancamentoAB
        multiline: False
    Button:
        size_hint: 1., 1.
        text: "Salvar"
        on_release: root.on_press_salvar()
    Button:
        size_hint: 1., 1.
        text: "Ver lista"
        on_release: root.on_press_lista()

<LabelRV@Label>:
    size_hint_y: None
    text_size: 300, None
    height: self.texture_size[1]
    width: 300
    color: (0,0,0,1)

<RV@RecycleView>:
    viewclass: 'LabelRV'
    RecycleBoxLayout:
        default_size: None, None
        padding: ('10dp', '10dp', '10dp', '10dp')
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        halign: 'left'
        
<ListaScreen@BoxLayout>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#D3D4D5')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: None, None
    pos_hint: {"center_x": .5, "center_y": .5}
    
    height: 500
    width: 500
    padding: ('10dp', '10dp', '10dp', '10dp')
    
    RV:
    Button:
        size_hint: 1., 0.2
        text: "Voltar"
        on_release: root.on_press_voltar()
    



FirstScreen: