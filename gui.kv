        height: self.minimum_height
        orientation: 'vertical'
        halign: 'left'
    
<BuscaPorNomeScreen>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#D3D4D5')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: None, None
    pos_hint: {"center_x": .5, "center_y": .5}
    
    height: 500
    width: 500
    padding: ('10dp', '10dp', '10dp', '10dp')
    Label:
        text: "Informe o nome:"
        size_hint: 1., None
        text_size: self.size
        height: 30
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: nomeParaBusca
        size_hint: 1., None
        height: 30
        multiline: False
    Button:
        size_hint: 1., None
        height: 50
        text: "Burcar"
        on_release: root.showData()
    RVNomeScreen:
        id: recycleBuscaNome
        
        
    BackButton:


