#:import get_color_from_hex kivy.utils.get_color_from_hex

<FirstScreen>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#D3D4D5')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: None, None
    height: 500
    width: 500
    pos_hint: {"center_x": .5, "center_y": .5}
    padding: ('10dp', '10dp', '10dp', '10dp')

    Label:
        text: "Nome do Album:"
        size_hint_x: .3
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: nomeAlbum
        size_hint: 1., None
        height: 30
        multiline: False
    Label:
        text: "Ano do lancamento:"
        size_hint_x: .3
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: anoLancamento
        size_hint: 1., None
        height: 30
        multiline: False
    Label:
        text: "Banda/Artista:"
        size_hint_x: .3                
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    TextInput:
        id: bandaArtista
        size_hint: 1., None
        height: 30
        multiline: False
    Label:
        text: "Album lancamento do artista:"
        size_hint_x: .5                
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        color: get_color_from_hex('#000000')
    GridLayout:
        cols: 4
        id: lancamentoAB
        Label:
            text: "Sim"
            color: get_color_from_hex('#000000')
            group: 'lancamentoAB'
        CheckBox:
            color: get_color_from_hex('#000000')
            group: 'lancamentoAB'
            on_active: root.checkBoxClick(self, self.active, "Sim") 
        Label:
            color: get_color_from_hex('#000000')
            text: "NÃ£o"
        CheckBox:
            color: get_color_from_hex('#000000')
            group: 'lancamentoAB'
            on_active: root.checkBoxClick(self, self.active, "Nao")
    GridLayout:
        cols: 3
        Label:
        Button:
            size_hint: 1., 1.
            text: "Salvar"
            on_release: root.onPressSalvar()
        Label:
        Button:
            size_hint: 1., 1.
            text: "Burcar por nome"
            on_release: root.onPressBuscaNome()
        Button:
            size_hint: 1., 1.
            text: "Ver lista"
            on_release: root.onPressLista()
        Button:
            size_hint: 1., 1.
            text: "Burcar por ano"
            on_release: root.onPressBuscaAno()


<BackButton@Button>:
    size_hint: 1., 0.2
    text: "Voltar"
    on_release: app.onPressVoltar()

<LabelRV@Label>:
    size_hint_y: None
    text_size: 300, None
    height: self.texture_size[1]
    width: 300
    color: (0,0,0,1)

<RVListaScreen>:
    viewclass: 'LabelRV'
    RecycleBoxLayout:
        default_size: None, None
        padding: ('10dp', '10dp', '10dp', '10dp')
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        halign: 'left'
        
<ListaScreen>:
    canvas.before:
        Color:
            rgba: get_color_from_hex('#D3D4D5')
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    size_hint: None, None
    pos_hint: {"center_x": .5, "center_y": .5}
    
    height: 500
    width: 500
    padding: ('10dp', '10dp', '10dp', '10dp')
    
    RVListaScreen:
    BackButton:
        
<RVNomeScreen>:
    viewclass: 'LabelRV'
    
    RecycleBoxLayout:
        default_size: None, None
        padding: ('10dp', '10dp', '10dp', '10dp')
